<%- include ("templates/header", {tituloWeb: 'Dashboard' } ) %>
    <%- include ("templates/navbar") %>

        <div class="container-fluid" id="mostrar" style="display: block;">
            <h2 class="mt-3">Registro Mascotas</h2>
            <div class="table-responsive mt-3">
                <table class="table table-hover table-bordered ">
                    <thead class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Tutor</th>
                        <th scope="col">Especie</th>
                        <th scope="col">Raza</th>
                        <th scope="col">Color</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Acci√≥n</th>
                    </thead>
                    <tbody>
                        <div>
                            <% if (arrayMascotasDB.length>0) { %>
                                <% let i=1 %>
                                    <% arrayMascotasDB.forEach(mascota=> { %>
                                        <tr>
                                            <td>
                                                <%= i++ %>
                                                <input value="<%= mascota._id %>" type="hidden" class="form-control idMascota">
                                            </td>
                                            <td>
                                                <input value="<%= mascota.nombre %>" class="form-control input nomMascota" disabled="true"/>
                                            </td>
                                            <td>
                                                <input value="<%= mascota.nombre_tutor %>" class="form-control input nomTutor" disabled="true"/>
                                            </td>
                                            <td>
                                                <input value="<%= mascota.especie %>" class="form-control input inputEsp" disabled="true"/>
                                            </td>
                                            <td>
                                                <input value="<%= mascota.raza %>" class="form-control input inputRaza" disabled="true"/>
                                            </td>
                                            <td>
                                                <input value="<%= mascota.color %>" class="form-control input inputColor" disabled="true"/>
                                            </td>
                                            <td>
                                                <input value="<%= mascota.sexo %>" class="form-control input inputSexo" disabled="true"/>
                                            </td>
                                            <td>
                                                <button onclick=" actualizarMascota('<%= mascota.id %>') " type="button"
                                                    class="actualizar btnAccion"><i
                                                    class="fa-solid fa-pencil iconUpd text-primary"></i></button>
                                                <button onclick=" eliminarMascota('<%= mascota.id %>') " type="button"
                                                    class="eliminar  btnAccion"><i class="fa-solid fa-x text-danger"></i></button>

                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% }else{ %>
                                                <h5 class="text-danger text-center">No hay registros</h5>
                                                <%} %>
                        </div>
                    </tbody>
                </table>
            </div>
            <button type="button" class="btn btn-primary mt-3 mb-5" id="btnDesplegar">Agregar
                Mascota</button>
        </div>
        <%- include ("dashboard_Form_Ingresar.ejs") %>


            <%- include("templates/footer") %>